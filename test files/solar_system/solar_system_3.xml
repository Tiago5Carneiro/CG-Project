<world>
    <window width="800" height="600" />
    <camera>
        <position x="0" y="30" z="50" />
        <lookAt   x="0" y="0"  z="0"  />
        <up       x="0" y="1"  z="0"  />
        <projection fov="60" near="1" far="1000" />
